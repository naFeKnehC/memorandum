{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"],
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@types/*": ["types/*"],
      "ipc": ["types/ipc"]
    },
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src", "types", "electron.vite.config.ts"]
}
